<Window x:Class="WIC_SDK_Sample.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIC_SDK_Sample.View"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="" WindowStyle="None" WindowState="Normal" Height="200" Width="400" AllowsTransparency="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="317*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Image Source="/BLWVisser Workswell;component/img/BLW Visser Orange sinds scherp.png" ClipToBounds="True" Margin="25,0" VerticalAlignment="Center" Height="66"/>
        <ProgressBar x:Name="pbLoading" Minimum="0" Maximum="100" Height="10" VerticalAlignment="Bottom" Grid.Row="4" Margin="0" Foreground="#FF014A93"/>
        <TextBlock x:Name="percentage" Margin="0" Grid.Row="3" Grid.RowSpan="2" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</Window>
